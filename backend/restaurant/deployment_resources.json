{
  "lambda-basic-execution": {
    "policy_content": {
      "Statement": [
        {
          "Action": [
            "logs:CreateLogGroup",
            "logs:CreateLogStream",
            "logs:PutLogEvents",
            "dynamodb:GetItem",
            "dynamodb:Query",
            "dynamodb:PutItem",
            "dynamodb:Batch*",
            "dynamodb:DeleteItem",
            "dynamodb:UpdateItem",
            "dynamodb:Scan",
            "ssm:PutParameter",
            "ssm:GetParameter",
            "kms:Decrypt",
            "cognito-idp:SignUp",
            "cognito-idp:AdminConfirmSignUp",
            "cognito-idp:AdminInitiateAuth",
            "cognito-idp:DescribeUserPool",
            "cognito-idp:GetUser",
            "cognito-idp:ListUsers",
            "cognito-idp:AdminCreateUser",
            "cognito-idp:AdminSetUserPassword",
            "cognito-idp:AdminUpdateUserAttributes",
            "cognito-idp:GetIdentityProviderByIdentifier",
            "cognito-idp:ListUserPools",
            "cognito-idp:ListUserPoolClients",
            "cognito-idp:AdminRespondToAuthChallenge"
          ],
          "Effect": "Allow",
          "Resource": "*"
        }
      ],
      "Version": "2012-10-17"
    },
    "resource_type": "iam_policy",
    "tags": {}
  },
  "restaurant_handler-role": {
    "predefined_policies": [],
    "principal_service": "lambda",
    "custom_policies": ["lambda-basic-execution"],
    "resource_type": "iam_role",
    "tags": {}
  },
  "restaurant-user-pool": {
    "resource_type": "cognito_idp",
    "password_policy": {
      "minimum_length": 8,
      "require_uppercase": true,
      "require_symbols": true,
      "require_lowercase": true,
      "require_numbers": true
    },
    "sms_configuration": {},
    "username_attributes": ["email"],
    "custom_attributes": [],
    "client": {
      "client_name": "restaurant-client-app",
      "generate_secret": false,
      "explicit_auth_flows": [
        "ALLOW_USER_SRP_AUTH",
        "ALLOW_REFRESH_TOKEN_AUTH",
        "ALLOW_ADMIN_USER_PASSWORD_AUTH",
        "ALLOW_CUSTOM_AUTH",
        "ALLOW_USER_PASSWORD_AUTH"
      ]
    },
    "tags": {}
  },
  "restaurant-api": {
    "resource_type": "api_gateway",
    "deploy_stage": "devss",
    "dependencies": [],
    "resources": {

      "/dishes/popular": {
        "enable_cors": false,
        "GET": {
          "authorization_type": "NONE",
          "integration_type": "lambda",
          "enable_proxy": true,
          "lambda_name": "restaurant_handler",
          "api_key_required": false,
          "method_request_parameters": {},
          "integration_request_body_template": {},
          "responses": [],
          "integration_responses": [],
          "default_error_pattern": true
        }
      },
      "/locations": {
        "enable_cors": false,
        "GET": {
          "authorization_type": "NONE",
          "integration_type": "lambda",
          "enable_proxy": true,
          "lambda_name": "restaurant_handler",
          "api_key_required": false,
          "method_request_parameters": {},
          "integration_request_body_template": {},
          "responses": [],
          "integration_responses": [],
          "default_error_pattern": true
        }
      },
      "/locations/{id}/feedbacks": {
        "enable_cors": false,
        "GET": {
          "authorization_type": "NONE",
          "integration_type": "lambda",
          "enable_proxy": true,
          "lambda_name": "restaurant_handler",
          "api_key_required": false,
          "method_request_parameters": {
            "method.request.path.id": true,
            "method.request.querystring.type": false,
            "method.request.querystring.page": false,
            "method.request.querystring.size": false,
            "method.request.querystring.sort": false
          },
          "integration_request_body_template": {},
          "responses": [],
          "integration_responses": [],
          "default_error_pattern": true
        }
      },
      "/locations/{id}/speciality-dishes": {
        "enable_cors": false,
        "GET": {
          "authorization_type": "NONE",
          "integration_type": "lambda",
          "enable_proxy": true,
          "lambda_name": "restaurant_handler",
          "api_key_required": false,
          "method_request_parameters": {
            "method.request.path.id": true
          },
          "integration_request_body_template": {},
          "responses": [],
          "integration_responses": [],
          "default_error_pattern": true
        }
      }
    },
    "tags": {},
    "authorizers": {
      "cognito-authorizer": {
        "type": "COGNITO_USER_POOLS",
        "identity_source": "method.request.header.Authorization",
        "ttl": 300,
        "user_pools": ["restaurant-user-pool"]
      }
    }
  }
}
